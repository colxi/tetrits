{
  "name": "tetrits",
  "type": "module",
  "author": {
    "name": "colxi",
    "email": "contact@colxi.info",
    "url": "http://www.colxi.info"
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --base=/tetrits/",
